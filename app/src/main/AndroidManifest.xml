<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project_sharing.opencloset.opencloset" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Index"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".popup_list"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Popup"
            android:screenOrientation="portrait"
            android:parentActivityName=".item_page">
        </activity>
        <activity
            android:name=".success"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Popup"
            android:screenOrientation="portrait"
            android:parentActivityName=".upload_page">
        </activity>
        <activity
            android:name=".item_list"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:parentActivityName=".Index">
        </activity>
        <activity
            android:name=".item_page"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:parentActivityName=".item_list">
        </activity>
        <activity
            android:name=".upload_page"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:parentActivityName=".Index">
        </activity>
    </application>

</manifest>
